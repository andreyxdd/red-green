#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo
echo '🏗️👷 Styling, testing, and building the project before committing 🏗️👷'
echo

# Check ESLint Standards
yarn check-lint ||
(
  echo
  echo '❌ ESLint check failed. Make the required changes listed above, add changes and try to commit again ❌'
  echo
  false; 
)

# Check tsconfig standards
yarn check-types ||
(
  echo
  echo '❌ Typescript types-check failed. Make the required changes listed above, add changes and try to commit again ❌'
  echo
  false;
)

# If everything passes... Now we can try to build the project
echo
echo '✅ All the checks are successfully passed. Building web-project proceeds next ✅'
echo


expo build:web ||
(
  echo
  echo '❌ Expo web-build failed: view the above errors ❌'
  echo
  false;
)

# If everything passes... Now we can commit
echo
echo '✅✅✅ The web-project has been successfully built and commit is accepted. ✅✅✅'
echo

npx lint-staged